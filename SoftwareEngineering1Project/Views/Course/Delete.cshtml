@model SoftwareEngineering1Project.Models.Course

@{
    ViewBag.Title = "Delete Course : " + Model.CourseAttributeNumber + " - " + Model.CourseName;
}

<h3>Are you sure you want to delete this course?</h3>
<h2>
    <a href="/course/index" class="btn btn-primary btn-sm" style="float: right;">
    <i class="fa fa-arrow-left"></i> Back to Courses List
</a>
</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseName)
        </dd>

        <dt>
            Dept. Abbreviation
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DeptAbbreviation)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CourseAttributeNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseAttributeNumber)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
      
        </div>
    }
</div>
