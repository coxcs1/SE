@model HtmlString
@{
    ViewBag.Title = "Archive Question";
}

<h2>@ViewBag.Title
    <a href="/questions/index" class="btn btn-primary btn-sm" style="float: right;">
        <i class="fa fa-arrow-left"></i> Back to Questions List
    </a></h2>

<h3>Are you sure you want to archive this question?</h3>
<div>
    @Html.Raw(Model)
</div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Archive" class="btn btn-default" />
        </div>
    }
