@{
    ViewBag.Title = "Upload Questions";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("UploadQuestions", "Questions", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2">Section</label>
            <div class="col-md-10">
                @Html.Raw(@ViewBag.SectionSelectList)    
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Select a File to Upload</label>
            <div class="col-md-10">
                <input class="btn btn-default form-control" type="file" id="file" name="file" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>

    </div>
}

