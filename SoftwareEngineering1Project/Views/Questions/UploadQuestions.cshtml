@model HtmlString

@{
    ViewBag.Title = "Upload Questions";
}

<h2>
    @ViewBag.Title
    <a href="@ViewBag.ReturnButton" class="btn btn-primary btn-sm" style="float: right;">
        <i class="fa fa-arrow-left"></i> @ViewBag.ReturnDesc
    </a>
</h2>

@using (Html.BeginForm("UploadQuestions", "Questions", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />        

        <div class="form-group">
            <label class="control-label col-md-2">Section</label>
            <div class="col-md-10">
                @Html.Raw(Model)    
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Select a File to Upload</label>
            <div class="col-md-10">
                <a href="http://team-loon.azurewebsites.net/Temp_Documents/ExampleQuestionDocument.pdf" target="_blank"
                   class="btn btn-sm btn-primary" style="float: right;">
                    <i class="fa fa-file-pdf-o"></i> View Example
                </a>
                <input class="btn btn-default form-control" type="file" id="file" name="file"/>               
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>

    </div>
}

