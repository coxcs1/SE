@model SoftwareEngineering1Project.Models.Question

@{
    ViewBag.Title = "Delete Question";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this question?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Course:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Course.CourseName)
        </dd>

        <dt>
            Teacher for Course
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Teacher.FullName)
        </dd>

        <dt>
            Modified By
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Profile.UserEmail)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Text)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Answer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Answer)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
